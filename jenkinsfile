pipeline{
  agent any
  triggers {
  cron('0 06 * * *')
  }
  stages{
    stage("code checkout"){
      steps{
      bat "echo hello"
      }
    }
    stage("code build"){
        steps{
          bat "mvn clean"
        }
      }  
       stage("code test"){
          steps{
          bat "mvn test"
        }
      }
        stage("SonarQube analysis") {
          steps{
          withSonarQubeEnv("sonar_local") {
           bat "mvn sonar:sonar"
        }
    	}
	}
		stage("SonarQube Quality Gate") {
				steps{
        		timeout(time: 1, unit: 'HOURS') {
            	waitForQualityGate abortPipeline: true
       		 }
		}
      stage("Publish to Artifactory"){
        steps{
              rtMavenDeployer(
                  id: 'deployer',
                  serverId:'nagp@govinda',
                  releaseRepo:'govinda1988',
                  snapshotRepo:'govinda1988',
                )
              rtMavenRun(
                  pom: 'pom.xml',
                  goals:'clean',
                  deployerId:'deployer'
              )
              rtPublishBuildInfo(
                  serverId:'nagp@govinda',
              )
            }
              
      }
      
      
}
post {
    success{
        bat "echo success"
            }
      }
}
  

  
